<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication 
	width="800" height="500"
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:air="coldfusion.air.*" xmlns:EditActor="components.EditActor.*">
	
	<s:layout>
		<s:VerticalLayout paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5"/>
	</s:layout>
	
	<s:HGroup width="100%" height="100%">
		
		<s:VGroup width="100%" height="100%">
			<s:Label text="Example Instance #1"/>
			<EditActor:ActorList
				id="a1"
				width="100%" height="100%"/>
		</s:VGroup>
		
		<!--
			* For development you can't run two instances of the same AIR app
			* running two instances side by side to see the syncing and conflict resolution in action.
		-->
		<s:VGroup width="100%" height="100%">
			<s:Label text="Example Instance #2"/>
			<EditActor:ActorList
				id="a2"
				width="100%" height="100%"/>
		</s:VGroup>
		
	</s:HGroup>	
</s:WindowedApplication>


